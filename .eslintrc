{
  "parser": "babel-eslint",
  "extends": ["airbnb", "prettier"],
  "plugins": [
    "react",
    "jsx-a11y",
    "import",
    "prettier"
  ],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true
      }
    ],
    "arrow-parens": ["error", "as-needed"],
    "radix": ["error", "as-needed"],
    "comma-dangle": ["error", "never"]
  },
  "env": {
    "jest": true
  }
}